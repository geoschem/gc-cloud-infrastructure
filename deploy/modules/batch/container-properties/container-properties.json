{ 
    "command": [],
    "environment": [
        { 
            "name": "S3_RUNDIR_PATH",
            "value": "${s3_path}/benchmarks/"
        },
        { 
            "name": "NUM_CORES_PER_NODE",
            "value": "${num_cores_per_node}"
        },
        { 
            "name": "TOTAL_CORES",
            "value": "${total_cores}"
        },
        { 
            "name": "NUM_NODES",
            "value": "${num_nodes}"
        },
        { 
            "name": "TAG_NAME",
            "value": "${tag_name}"
        },
        { 
            "name": "CS_RES",
            "value": "${resolution}"
        }
    ],
    "image": "${docker_image}",
    "jobRoleArn": "${job_role}",
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/aws/batch/${log_group}",
            "awslogs-region": "${default_region}",
            "awslogs-stream-prefix": "${log_name}"
        }
    },
    "mountPoints": [],
    "privileged": true,
    "resourceRequirements": [ 
        { 
            "type": "MEMORY",
            "value": "${container_memory}"
        },
        { 
            "type": "VCPU",
            "value": "${container_cpu}"
        }
    ],
    "secrets": [],
    "linuxParameters": {
        "sharedMemorySize": ${shared_memory_size}
    }
}
